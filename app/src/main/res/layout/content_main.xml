<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_amber_50"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.homecerebro.agroei.MainActivity"

    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:minHeight="66dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:background="@color/md_teal_200"
            android:src="@drawable/crecimiento24" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_teal_200"
            android:text="agricultura ecologica" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="100dp"
        android:minHeight="66dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:background="@color/md_teal_200"
            android:src="@drawable/valvula32" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_teal_200"
            android:text="RIEGO" />

    </LinearLayout>






</LinearLayout>